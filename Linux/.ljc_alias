alias vi=vim
alias ls='ls --color=auto'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias ll='ls -alF'
alias la='ls -AF'
alias l='ls -CF'
alias t='tree -ah --du'
alias alert='notify-send -t 5000 -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'
alias ga='git add'
alias gb='git branch'
alias gc='git commit -v'
alias gcl='git clone --recursive'
alias gcb='git checkout -b'
alias gco='git checkout'
alias gd='git diff'
alias gf='git fetch'
alias glg='git log --stat'
alias gl='git pull'
alias gm='git merge'
alias gp='git push'
alias gst='git status'
